rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to get the user ID
    function userId() {
      return request.auth.uid;
    }

    // Groups collection
    match /groups/{groupId} {
      // Allow read if user is a linked member of the group
      allow read: if isAuthenticated() && userId() in resource.data.linkedUserIds;

      // Allow create if authenticated (creator will be added as linked member)
      allow create: if isAuthenticated() && userId() in request.resource.data.linkedUserIds;

      // Allow update if user is a linked member (for editing or joining)
      allow update: if isAuthenticated() && (
        userId() in resource.data.linkedUserIds ||
        userId() in request.resource.data.linkedUserIds
      );

      // Allow delete only if user is the creator
      allow delete: if isAuthenticated() && userId() == resource.data.createdBy;
    }

    // Invite codes collection - for O(1) lookup of invite codes
    match /inviteCodes/{code} {
      // Allow read to any authenticated user (needed to claim invite codes)
      allow read: if isAuthenticated();

      // Allow create/delete only through server-side operations or group member operations
      // In practice, these are managed by the group repository when adding/removing members
      allow create, delete: if isAuthenticated();
    }

    // Expenses collection
    match /expenses/{expenseId} {
      // Allow read/write if user is authenticated and is a member of the expense's group
      allow read, write: if isAuthenticated();
    }

    // Settlements collection
    match /settlements/{settlementId} {
      allow read, write: if isAuthenticated();
    }

    // Users collection (for profiles)
    match /users/{uid} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && userId() == uid;
    }
  }
}
