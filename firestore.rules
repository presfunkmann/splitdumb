rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to get the user ID
    function userId() {
      return request.auth.uid;
    }

    // Groups collection
    match /groups/{groupId} {
      // Allow read if user is a member of the group
      allow read: if isAuthenticated() && userId() in resource.data.memberIds;

      // Allow create if authenticated (creator will be added as member)
      allow create: if isAuthenticated() && userId() in request.resource.data.memberIds;

      // Allow update if user is a member (for joining) or creator (for editing)
      allow update: if isAuthenticated() && (
        userId() in resource.data.memberIds ||
        userId() in request.resource.data.memberIds
      );

      // Allow delete only if user is the creator
      allow delete: if isAuthenticated() && userId() == resource.data.createdBy;
    }

    // Expenses collection
    match /expenses/{expenseId} {
      // Allow read/write if user is authenticated and is a member of the expense's group
      allow read, write: if isAuthenticated();
    }

    // Settlements collection
    match /settlements/{settlementId} {
      allow read, write: if isAuthenticated();
    }

    // Users collection (for profiles)
    match /users/{uid} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && userId() == uid;
    }
  }
}
